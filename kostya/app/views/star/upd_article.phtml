<article class="midl">
<h2>Изменение: <?=$name?></h2>

<?php echo $this->tag->form("star/updater"); ?>
<? include "form.phtml";?>
<input type="hidden" name="id" value="<?=$id?>">
<input class="galaxybutton" onmousedown="search()" name="upd" type="button" value="Изменить">
</form>
