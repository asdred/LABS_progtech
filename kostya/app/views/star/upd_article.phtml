</article>

<script>
function search() {
	 			var name = document.getElementsByTagName('input')[0].value;
                var weight = document.getElementsByTagName('input')[1].value;
                var age = document.getElementsByTagName('input')[2].value;
                var solar_system = document.getElementsByTagName('select')[0].value;
                var type = document.getElementsByTagName('select')[1].value;
                var id = document.getElementsByTagName('input')[3].value;
                $.ajax({
                    type: 'POST',
                    url: 'http://space.tp/star/updater',
                    data: 'name=' + name + '&weight=' + weight + '&age=' + age + '&id=' + id + '&solar_system=' + solar_system + '&type=' + type,
                    success: function(data) {
                        $('.results').html(data);
                    }
                });
            }
</script>